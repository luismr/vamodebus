<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.vamodebus"
    android:versionCode="4"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_short_name"
        android:theme="@style/AppTheme" >
        <activity android:name="br.com.vamodebus.activities.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.vamodebus.activities.ListRoutesActivity" >
        </activity>
        <activity android:name="br.com.vamodebus.activities.WhereIsTheBusActivity" >
        </activity>
        <activity android:name="br.com.vamodebus.activities.SearchActivity" />
        <activity android:name="br.com.vamodebus.activities.InfoActivity" />
        <activity android:name="br.com.vamodebus.activities.SocialActivity" />
        <activity android:name="br.com.vamodebus.activities.ConfigActivity" />
    </application>

</manifest>