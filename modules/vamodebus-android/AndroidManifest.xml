<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.vamodebus"
    android:versionCode="4"
    android:versionName="1.3.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>
	
    <application
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_short_name"
        android:theme="@style/AppTheme" >
        <activity android:name="br.com.vamodebus.activities.SplashActivity" 
            android:screenOrientation="portrait"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.vamodebus.activities.ListRoutesActivity" 
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name="br.com.vamodebus.activities.WhereIsTheBusActivity"  
            android:screenOrientation="portrait"
            android:configChanges="orientation" />
        <activity android:name="br.com.vamodebus.activities.SearchActivity"  
            android:screenOrientation="portrait"
            android:configChanges="orientation" />
        <activity android:name="br.com.vamodebus.activities.AboutActivity"  
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name="br.com.vamodebus.activities.SocialActivity"  
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name="br.com.vamodebus.activities.SettingsActivity"  
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name="br.com.vamodebus.activities.HelpActivity"  
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
    </application>

</manifest>